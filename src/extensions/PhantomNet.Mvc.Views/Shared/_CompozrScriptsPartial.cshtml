@inject MvcHelper MvcHelper

@if (MvcHelper.Compozing)
{
    try
    {
        @await Component.InvokeAsync(MvcHelper.CurrentActionCompozrScriptsViewComponentName)
    }
    catch (InvalidOperationException e)
    {
        if (e.Message == $"A view component named '{MvcHelper.CurrentActionCompozrScriptsViewComponentName}' could not be found.")
        {
            @await Component.InvokeAsync(typeof(PhantomNet.Mvc.ViewComponents.Compozr.EmptyCompozrScriptsViewComponent))
        }
        else
        {
            throw e;
        }
    }
}
